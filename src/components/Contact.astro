<div class="contact-main" id="contact">
	<div>
		<h1>Have a question? Want to say hi?</h1>
		<h2>Send me a message!</h2>
	</div>

	<div id="myModal" class="modal">
		<div class="modal-content">
			<span class="close">&times;</span>
			<p>Thank you for your message. I will respond promptly.</p>
		</div>
	</div>

	<form id="contact-form" name="contact" data-netlify="true">
		<div>
			<div class="name-email">
				<label for="name">
					Name
					<br />
					<input
						type="text"
						name="name"
						id="name"
						placeholder="Enter Your Name"
					/>
				</label>
				<label for="email"
					>Email
					<br />
					<input
						type="email"
						name="name"
						id="name"
						placeholder="Enter Your Email"
					/>
				</label>
			</div>
			<div class="textarea-container">
				<label for="message">
					Your Message
					<br />
					<textarea
						name="message"
						id="message"
						cols="30"
						rows="10"
						placeholder="Enter Your Message"></textarea>
				</label>
			</div>
		</div>
		<button type="submit">Submit</button>
	</form>
</div>
<script>
	const form = document.querySelector("form");
	const modal: HTMLElement | null = document.getElementById("myModal");
	const closeBtn = document.getElementsByClassName("close")[0];

	if (form instanceof HTMLFormElement) {
		form.addEventListener("submit", function (event) {
			event.preventDefault();
			if (modal instanceof HTMLElement) {
				modal.style.display = "block";
			}
		});
	} else {
		console.error("A form nem található vagy nem egy HTMLFormElement.");
	}

	closeBtn.addEventListener("click", function () {
		if (modal instanceof HTMLElement) {
			modal.style.display = "none";
		}
	});

	window.addEventListener("click", function (event) {
		if (event.target === modal) {
			if (modal instanceof HTMLElement) {
				modal.style.display = "none";
			}
		}
	});
</script>
<style>
	.contact-main {
		height: auto;
		margin-bottom: 115px;
	}
	.contact-main h1 {
		margin-top: 100px;
	}
	form {
		margin-top: 150px;
	}
	.name-email {
		display: flex;
		justify-content: center;
		gap: 50px;
		margin-bottom: 100px;
	}
	input {
		width: 250px;
		height: 30px;
		outline: none;
		border: 1px solid var(--powderBlue);
	}
	textarea {
		font-size: large;
		height: 100px;
		width: 560px;
		border: 1px solid var(--powderBlue);
		resize: none;
		outline: none;
		padding: 0;
		margin: 0;
	}
	label {
		text-align: left;
		line-height: 50px;
	}
	.textarea-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	button {
		font-size: 1.3rem;
		margin-top: 50px;
		padding: 10px 30px;
		border-radius: 100px;
		background-color: transparent;
		border: 1px solid var(--gunmetal);
		transition: all 0.5s;
	}
	button:hover {
		background-color: var(--powderBlue);
	}
	button:active {
		background-color: var(--gunmetal);
		color: var(--aliceBlue);
	}
	/* modal */
	.modal {
		display: none;
		position: fixed;
		z-index: 99;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
		background-color: rgba(0, 0, 0, 0.4); /* Átlátszó háttér */
	}
	.modal-content {
		background-color: var(--aliceBlue);
		margin: 15% auto;
		padding: 20px;
		border: 1px solid #888;
		width: 40%;
		border-radius: 15px;
		border: none;
		animation: fadein 2s;
	}
	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}
	.close:hover,
	.close:focus {
		color: black;
		text-decoration: none;
		cursor: pointer;
	}
	@keyframes fadein {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
	@media screen and (max-width: 900px) {
		.contact-main h1 {
			font-size: 1.4rem;
		}
		form {
			margin-top: 30px;
		}
		input {
			width: 150px;
		}
		textarea {
			width: 100%;
		}
		label {
			line-height: 25px;
		}
	}
	@media screen and (max-width: 380px) {
		.name-email {
			gap: 20px;
		}
	}
</style>
