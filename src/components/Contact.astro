<div class="contact-main" id="contact">
	<h1>Have a question? Want to say hi? Send me a message!</h1>
	<form name="contact" data-netlify="true">
		<div>
			<div class="name-email">
				<label for="name">
					Name
					<br />
					<input
						type="text"
						name="name"
						id="name"
						placeholder="Enter Your Name"
					/>
				</label>
				<label for="email"
					>Email
					<br />
					<input
						type="email"
						name="name"
						id="name"
						placeholder="Enter Your Email"
					/>
				</label>
			</div>
			<div class="textarea-container">
				<label for="message">
					Your Message
					<br />
					<textarea
						name="message"
						id="message"
						cols="30"
						rows="10"
						placeholder="Enter Your Message"></textarea>
				</label>
			</div>
		</div>
		<button type="submit">Submit</button>
	</form>
</div>

<style>
	.contact-main {
		height: 100vh;
	}
	.contact-main h1 {
		margin-top: 100px;
	}
	form {
		margin-top: 200px;
	}
	.name-email {
		display: flex;
		justify-content: center;
		gap: 50px;
		margin-bottom: 100px;
	}
	input {
		width: 250px;
		height: 30px;
		outline: none;
		border: 1px solid var(--powderBlue);
	}
	textarea {
		font-size: large;
		height: 100px;
		width: 560px;
		border: 1px solid var(--powderBlue);
		resize: none;
		outline: none;
		padding: 0;
		margin: 0;
	}
	label {
		text-align: left;
		line-height: 50px;
	}
	.textarea-container {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	button {
		font-size: 1.3rem;
		margin-top: 50px;
		padding: 10px 30px;
		border-radius: 100px;
		background-color: transparent;
		border: 1px solid var(--gunmetal);
		transition: all 0.5s;
	}
	button:hover {
		background-color: var(--powderBlue);
	}
	button:focus {
		background-color: var(--gunmetal);
		color: var(--aliceBlue);
	}
	@media screen and (max-width: 900px) {
		.contact-main h1 {
			font-size: 1.4rem;
		}
		form {
			margin-top: 30px;
		}
		input {
			width: 150px;
		}
		textarea {
			width: 100%;
		}
		label {
			line-height: 25px;
		}
	}
</style>
